<!DOCTYPE html>
<html>
<head>
  <title>SPCTRL</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h3>SPCTRL</h3>

  <div id="main_menu">
    <span><%= link_to('home', root_path)%></span><span>//</span><span><%= link_to('canvas', canvas_path)%></span>
    <span><span>//</span>
      <% if session[:current_user] %>
        <% @current_user ||= User.find(session[:current_user]) %>
        <%= link_to @current_user.username, user_path(@current_user) %><span>//</span>
        <%= link_to 'Sign Out', logout_path %>
      <% else %>
        <%= link_to 'Log In', login_path %><span>//</span>
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
    </span>
  </div>
    <%= yield %>
    <div id="sound_wrapper"></div>

</body>
