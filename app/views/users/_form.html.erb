<h3>SIGN UP</h3>

<ul>
  <% user.errors.full_messages.each do |message| %>
    <li><p><%= message %></p></li>
  <% end %>
</ul>


<div class="form_fields">
  <%= form_for user do |f| %>
  <p class="form_label"><%= f.label :username %></p>
  <p><%= f.text_field :username %></p>

  <p class="form_label"><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>

  <p class="form_label"><%= f.label :password_confirmation %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Update" %></p>
  <% end %>
</div>
